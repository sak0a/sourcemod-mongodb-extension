# Production MongoDB API Service Configuration

# Server Configuration
PORT=3300
HOST=0.0.0.0
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=http://your-gameserver.com,http://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# MongoDB Connection - PRODUCTION
# Replace with your actual MongoDB credentials and server
MONGODB_URI=mongodb://admin:your_production_password@37.114.54.74:27017/?authSource=admin

# Connection Pool Settings
MONGODB_MAX_POOL_SIZE=20
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_IDLE_TIME_MS=60000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000

# API Security
API_KEY=your-production-secret-api-key

# Logging
LOG_LEVEL=warn
