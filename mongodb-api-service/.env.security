# MongoDB API Service - Security Configuration
# Copy this to .env and customize for your environment

# API Security
SOURCEMOD_API_KEY=sourcemod-mongodb-extension-2024
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_SLOW_DOWN_AFTER=100
RATE_LIMIT_SLOW_DOWN_DELAY=500

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3300,http://127.0.0.1:3300

# Security Settings
REQUIRE_HTTPS=false
NODE_ENV=development

# IP Whitelist (comma-separated, optional)
# ALLOWED_IPS=127.0.0.1,192.168.1.100

# Logging Level
LOG_LEVEL=info

# Request Size Limits
MAX_REQUEST_SIZE=10mb

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_TIMEOUT=24h
