# MongoDB API Service Configuration

# Server Configuration
PORT=3300
HOST=0.0.0.0
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# MongoDB Connection
# Format: mongodb://[username:password@]host[:port][/database][?options]
MONGODB_URI=mongodb://admin:your_password@37.114.54.74:27017/?authSource=admin

# Alternative MongoDB configurations for different environments:

# Local development
# MONGODB_URI=mongodb://localhost:27017/gamedb

# MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gamedb?retryWrites=true&w=majority

# MongoDB with SSL
# MONGODB_URI=mongodb://username:password@host:27017/gamedb?ssl=true&authSource=admin

# MongoDB replica set
# MONGODB_URI=mongodb://username:password@host1:27017,host2:27017,host3:27017/gamedb?replicaSet=myReplicaSet&authSource=admin

# Connection Pool Settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000

# API Security
API_KEY=your-secret-api-key

# Logging
LOG_LEVEL=info
